<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title >shop profile</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="css/profilestyle.css" type="text/css" media="screen, projection, tv" />
<link rel="stylesheet" href="css/profilesty_prnt.css" type="text/css" media="print" />
</head>
<body>
<div id="wrapper">
  <div class="title">
    <div class="title-top">
      <div class="title-left">
        <div class="title-right">
          <div class="title-bottom">
            <div class="title-top-left">
              <div class="title-bottom-left">
                <div class="title-top-right">
                  <div class="title-bottom-right">
                    <h1 ><a href="http://all-free-download.com/free-website-templates/"><div id="name"></div></a></h1>
                    <p id="sid">{{d}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr class="noscreen" />
  <div class="content">
    <div class="column-left">
      <h3>Actions</h3>
      <a href="#skip-menu" class="hidden">Skip menu</a>
      <ul class="menu">
        <li><a href="#" class="active">Home</a></li>
        <li><a href="http://localhost:8080/showbooksall?id={{d}}">Books</a></li>
        <li><a href="http://localhost:8080/bookform?id={{d}}">Add Book</a></li>
        <li><a href="http://localhost:8080/shoporder?id={{d}}">Orders</a></li>
        <li class="last"><div id="total"></div></li>
      </ul>
    </div>
    <div id="skip-menu"></div>
    <div class="column-right">
      <div class="box">
        <div class="box-top"></div>
        <div class="box-in">
          <h2>DESCRIPTION</h2>
          <div id="des"></div>
          <div id="contact"></div>
          <div id="mail"></div>
          
          <br />
          <h2>ADDRESS</h2>
          <div id="address"></div>
          
        </div>
      </div>
      
    </div>
    <div class="cleaner">&nbsp;</div>
  </div>
</div>
<div align=center> <a href='http://all-free-download.com/free-website-templates/'></a></div>

<script>
    async function fn(){
        const option={
                method:'GET'
            };

            const url="http://localhost:8080/shopinfo?id={{d}}";
            const res= await fetch(url,option);
            const myob= await res.json();
            console.log(myob);
            var p=document.createElement('p');
            p.innerHTML=myob[0].SHOP_NAME
            document.getElementById('name').appendChild(p);

             var q=document.createElement('p');
            q.innerHTML=myob[0].DESCRIPTION
            document.getElementById('des').appendChild(q);

             var r=document.createElement('p');
            r.innerHTML=myob[0].TOTAL_EARNING
            document.getElementById('total').appendChild(r);
            var s=document.createElement('p');
            s.innerHTML=myob[0].CONTACT_NO
            document.getElementById('contact').appendChild(s);
            var t=document.createElement('p');
            t.innerHTML=myob[0].EMAIL
            document.getElementById('mail').appendChild(t);
            





            const url2="http://localhost:8080/address?aid="+myob[0].ADDRESS_ID;
            const res2= await fetch(url2,option);
            const myob2= await res2.json();
           
            var p2=document.createElement('p');
            p2.innerHTML=myob2[0].STREET+" , "+myob2[0].THANA+" , "+myob2[0].DISTRICT_NAME+"<br>"+"Postal code: "+myob2[0].POSTAL_CODE;
            document.getElementById('address').appendChild(p2);
    }
    var m=fn();

</script>
</body>
</html>
